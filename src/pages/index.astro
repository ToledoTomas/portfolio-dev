---
import About from "../components/About.astro";
import Badge from "../components/Badge.astro";
import Code from "../icons/Code.astro";
import Experience from "../components/Experience.astro";
import GithubIcon from "../icons/Github.astro";
import Layout from "../layouts/Layout.astro";
import LinkedinIcon from "../icons/Linkedin.astro";
import MailIcon from "../icons/Gmail.astro";
import Profile from "../icons/Profile.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialMedia from "../components/SocialMedia.astro";
import Work from "../icons/Work.astro";
---

<Layout
  title="Portfolio Toledo Tomás - Desarrollador Full Stack"
  description="Contrata a un desarrollador web full stack con experiencia en la creación de aplicaciones dinámicas y escalables utilizando tecnologías modernas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <!-- <img
        class="rounded-full w-12 h-12 mb-4"
        src="/img-dev.jpg"
        alt="photo dev"
      /> -->

      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-4"
      >
        Hola, soy Toledo Tomás
        <a
          href="https://www.linkedin.com/in/toledo-tomas-agustin/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-yellow-200/90">Desarrollador web full stack</span>
        <span class="opacity-80"
          >con experiencia en la creación de aplicaciones dinámicas y escalables
          utilizando tecnologías modernas.</span
        >
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialMedia href="https://www.linkedin.com/in/toledo-tomas-agustin/">
          <LinkedinIcon class="size-4 md:size-6" />LinkedIn
        </SocialMedia>
        <SocialMedia href="https://github.com/ToledoTomas">
          <GithubIcon class="size-4 md:size-6" />GitHub
        </SocialMedia>
        <SocialMedia href="https://github.com/ToledoTomas">
          <MailIcon class="size-4 md:size-6" />Tomas_toledo98@hotmail.com
        </SocialMedia>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Work class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-2 flex gap-x-3 items-center mt-20">
        <Code class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="sobre-mi">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center mt-20">
        <Profile class="size-7" />
        Sobre mi
      </h2>
      <About />
    </SectionContainer>
  </main>
</Layout>
